// FlatBuffer schema for MOO Var type representation
// Used for RPC serialization where external languages need access
// Also used for database persistence where lambdas and anonymous objects are allowed

include "common.fbs";
include "moor_program.fbs";

namespace MoorVar;

// ============================================================================
// Var union and variants
// ============================================================================

union VarUnion {
    VarNone,
    VarBool,
    VarInt,
    VarFloat,
    VarStr,
    VarObj,
    VarErr,
    VarList,
    VarMap,
    VarSym,
    VarBinary,
    VarFlyweight,
    VarLambda
    // Note: Lambda is not transmittable over RPC (see var_to_flatbuffer)
    // but is supported for database persistence (see var_to_db_flatbuffer)
}

table VarNone {
}

table VarBool {
    value: bool;
}

table VarInt {
    value: int64;
}

table VarFloat {
    value: float64;
}

table VarStr {
    value: string (required);
}

table VarObj {
    obj: MoorCommon.Obj (required);
}

table VarErr {
    error: MoorCommon.Error (required);
}

table VarSym {
    symbol: MoorCommon.Symbol (required);
}

table VarBinary {
    data: [uint8] (required);
}

table VarList {
    elements: [Var] (required);
}

table VarMapPair {
    key: Var (required);
    value: Var (required);
}

table VarMap {
    pairs: [VarMapPair] (required);
}

table FlyweightSlot {
    name: MoorCommon.Symbol (required);
    value: Var (required);
}

table VarFlyweight {
    delegate: MoorCommon.Obj (required);
    slots: [FlyweightSlot] (required);
    contents: VarList (required);  // Reuse VarList for contents
}

table VarLambda {
    params: MoorProgram.StoredScatterArgs (required);
    body: MoorProgram.StoredProgram (required);
    captured_env: [VarList] (required);  // Vec<Vec<Var>> - vector of stack frames
    self_var: MoorProgram.StoredName;  // Optional self-reference for recursive lambdas
}

table Var {
    variant: VarUnion (required);
}

root_type Var;
